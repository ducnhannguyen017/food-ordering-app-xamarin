                                <Label Text="{Binding TotalPrice, StringFormat='Total ${0}'}" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </StackLayout>
                        </Grid>
                    </Grid>-->
                    
                </Grid>
                
            </ScrollView>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>